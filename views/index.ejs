<%- include('./partials/header') %>
  <body>
	<div class="type-table"> 
		<table>
			<tr>
				<th>Chicken</th>
			</tr>	

			<% chickens.forEach((chicken) => { %> 
				<tr> 
					<td> 
						<form action="/food" method="post"> 
							<button id="food" type="submit" name="item" value="<%= chicken.FoodName %>"><%= chicken.FoodName %></button> 
						</form>
					 </td>
				</tr>
			<% }) %> 
		</table>

		<table> 
			<tr>
				<th>Beef</th>
			</tr>

			<% beefs.forEach((beef) => { %> 
